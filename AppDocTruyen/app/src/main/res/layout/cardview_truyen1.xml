<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv_truyen1"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/imgTruyen1"
                android:layout_width="100dp"
                android:layout_height="120dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imgTruyen1"
                android:textColor="@color/colorAccent"
                android:padding="1dp"
                android:textSize="20sp"
                android:id="@+id/txtTenTruyen1"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtTenTacGia"
                android:layout_toRightOf="@id/imgTruyen1"
                android:textColor="@color/black"
                android:padding="1dp"
                android:id="@+id/txtTrangThai"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtTrangThai"
                android:layout_toRightOf="@id/imgTruyen1"
                android:textColor="@color/black"
                android:padding="1dp"
                android:id="@+id/txtSoChuong"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtTenTruyen1"
                android:layout_toRightOf="@id/imgTruyen1"
                android:textColor="@color/black"
                android:padding="1dp"
                android:id="@+id/txtTenTacGia"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>